{
  "cloudcode.autoDependencies": "on",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Catppuccin Mocha",
  "search.exclude": {
    "**/bazel-*/**": true,
    "**/.devenv/**": true,
    "**/.direnv/**": true,
    "**/.hypothesis/**": true,
    "**/.venv/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.solid/**": true,
    "**/dev/cluster/pyrovelocity/pyrovelocitydev/cue.mod/**": true
  },
  "files.watcherExclude": {
    "**/bazel-*/**": true,
    "**/.devenv/**": true,
    "**/.direnv/**": true,
    "**/.hypothesis/**": true,
    "**/.venv/**": true,
    "**/.mypy_cache/**": true,
    "**/.nox/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.solid/**": true,
    "**/dev/cluster/pyrovelocity/pyrovelocitydev/cue.mod/**": true
  },
  // this is a workaround for 1000% CPU usage by
  // /Applications/Visual Studio Code.app/Contents/Resources/app/node_modules.asar.unpacked/@vscode/ripgrep/bin/rg
  // https://github.com/microsoft/vscode/issues/186279#issuecomment-1633159669
  "search.followSymlinks": false,
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.persistentSessionScrollback": 100000,
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 14
}
